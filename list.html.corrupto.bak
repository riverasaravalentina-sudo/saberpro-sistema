<body>
    <!-- Incluir navbar -->
    <div th:replace="~{layout/base :: navbar}"></div>

    <div class="container-fluid px-4">
        <!-- Header -->
        <div class="page-header animate__animated animate__fadeInDown">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="page-title">
                        <i class="fas fa-users me-3"></i>
                        Gesti贸n de Alumnos
                    </h1>
                    <p style="color: #666; margin: 0.5rem 0 0 0; font-size: 1.1rem;">
                        Administraci贸n completa de estudiantes del sistema
                    </p>
                </div>
                <img src="https://media.giphy.com/media/l0HlMPcbD4jdARjRC/giphy.gif" 
                     style="width: 120px; border-radius: 15px;">
            </div>
        </div>

        <!-- Estad铆sticas -->
        <div class="row mb-4 animate__animated animate__fadeInUp">
            <div class="col-md-4 mb-3">
                <div class="stat-card primary">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stat-number" th:text="${totalAlumnos}" style="background: var(--primary-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">0</div>
                            <p class="mb-0" style="color: #666; font-weight: 600;">Total Estudiantes</p>
                        </div>
                        <div>
                            <i class="fas fa-users" style="font-size: 3rem; color: #667eea; opacity: 0.3;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="stat-card success">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stat-number" th:text="${alumnosConResultados}" style="background: var(--success-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">0</div>
                            <p class="mb-0" style="color: #666; font-weight: 600;">Con Resultados</p>
                        </div>
                        <div>
                            <i class="fas fa-chart-bar" style="font-size: 3rem; color: #11998e; opacity: 0.3;"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="stat-card warning">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stat-number" th:text="${alumnosSinResultados}" style="background: var(--warning-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">0</div>
                            <p class="mb-0" style="color: #666; font-weight: 600;">Sin Resultados</p>
                        </div>
                        <div>
                            <i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: #f093fb; opacity: 0.3;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filtros y acciones -->
        <div class="search-section animate__animated animate__fadeInUp">
            <div class="row align-items-center">
                <div class="col-md-8 mb-3 mb-md-0">
                    <form class="d-flex" method="get">
                        <input class="form-control search-input me-2" type="search" name="buscar" 
                               placeholder=" Buscar por nombre, apellido o documento..." 
                               th:value="${buscar}">
                        <button class="btn btn-search" type="submit">
                            <i class="fas fa-search me-2"></i>Buscar
                        </button>
                    </form>
                </div>
                <div class="col-md-4 text-end">
                    <a th:href="@{/alumnos/nuevo}" class="btn btn-new">
                        <i class="fas fa-plus me-2"></i>Nuevo Alumno
                    </a>
                </div>
            </div>
        </div>

        <!-- Tabla de alumnos -->
        <div class="table-card animate__animated animate__fadeInUp">
            <div class="table-header">
                <h5><i class="fas fa-list me-2"></i>Lista de Alumnos</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th><i class="fas fa-id-card me-2"></i>Documento</th>
                            <th><i class="fas fa-user me-2"></i>Nombre Completo</th>
                            <th><i class="fas fa-graduation-cap me-2"></i>Programa</th>
                            <th><i class="fas fa-envelope me-2"></i>Correo</th>
                            <th><i class="fas fa-check-circle me-2"></i>Estado</th>
                            <th><i class="fas fa-cog me-2"></i>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr th:each="alumno : ${alumnos}">
                            <td th:text="${alumno.documento}" style="font-weight: 600;">12345678</td>
                            <td th:text="${alumno.nombreCompleto}">Nombre Apellido</td>
                            <td th:text="${alumno.programa}">Programa</td>
                            <td th:text="${alumno.correo}">correo@uts.edu.co</td>
                            <td>
                                <span th:if="${alumno.tieneResultados()}" class="badge badge-success-custom">
                                    <i class="fas fa-check-circle me-1"></i>Con Resultados
                                </span>
                                <span th:unless="${alumno.tieneResultados()}" class="badge badge-warning-custom">
                                    <i class="fas fa-clock me-1"></i>Pendiente
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a th:href="@{/alumnos/detalle/{id}(id=${alumno.id})}" 
                                       class="btn btn-sm btn-action btn-outline-primary" title="Ver Detalle">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a th:href="@{/alumnos/editar/{id}(id=${alumno.id})}" 
                                       class="btn btn-sm btn-action btn-outline-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a th:if="${alumno.tieneResultados()}" 
                                       th:href="@{/resultados/alumno/{id}(id=${alumno.id})}" 
                                       class="btn btn-sm btn-action btn-outline-success" title="Ver Resultado">
                                        <i class="fas fa-chart-bar"></i>
                                    </a>
                                    <a th:unless="${alumno.tieneResultados()}" 
                                       th:href="@{/resultados/nuevo(alumnoId=${alumno.id})}" 
                                       class="btn btn-sm btn-action btn-outline-info" title="Agregar Resultado">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                    <a th:href="@{/alumnos/eliminar/{id}(id=${alumno.id})}" 
                                       class="btn btn-sm btn-action btn-outline-danger" 
                                       onclick="return confirm('驴Est谩 seguro de eliminar este alumno?')"
                                       title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr th:if="${#lists.isEmpty(alumnos)}">
                            <td colspan="6" class="empty-state">
                                <img src="https://media.giphy.com/media/g01ZnwAUvutuK8GIQn/giphy.gif" alt="Empty">
                                <h5 style="color: #667eea; font-family: 'Poppins', sans-serif; font-weight: 600;">No se encontraron alumnos</h5>
                                <p style="color: #666; margin-bottom: 1.5rem;">Comienza agregando estudiantes al sistema</p>
                                <a th:href="@{/alumnos/nuevo}" class="btn btn-new">
                                    <i class="fas fa-plus me-2"></i>Agregar primer alumno
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <div style="margin-bottom: 3rem;"></div>
    </div>

    <!-- Incluir footer -->
    <div th:replace="~{layout/base :: footer}"></div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
